{
  "name": "KoreaNetVPN",
  "main": "main.js",
  "version": "1.1.0",
  "description": "KRNET Optimized client app for passing over the great firewall of CN",
  "author": "@iamblueming ,, KRNET Org",
  "license": "CC0-1.0",
  "dependencies": {
    "express": "^4.17.1",
    "js-yaml": "^3.14.0",
    "kill-port": "^1.6.1",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "tcp-ping": "^0.1.1"
  },
  "build": {
    "electronVersion": "11.0.0",
    "productName": "KRNET.Clinet.APP",
    "appId": "org.krnet.app",
    "copyright": "Â©2022-2024 KRNET",
    "directories": {
      "output": "build"
    },
    "extraResources": [
      {
        "from": "../libs/${env.target}-${arch}",
        "to": "./libs/${env.target}-${arch}"
      },
      {
        "from": "../libs/geo",
        "to": "./libs/${env.target}-${arch}"
      }
    ],
    "files": [
      "main.js",
      "package.json",
      "**/*"
    ],
    "dmg": {
      "background": "../res/background.png",
      "icon": "../res/icon.ico",
      "iconSize": 75,
      "window": {
        "width": 600,
        "height": 600
      },
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "../res/icon.png"
    },
    "win": {
      "icon": "../res/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}